<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimens_60dp"
    android:layout_margin="@dimen/dimens_5dp"
    android:background="@drawable/accept_invitation_user_bg">

    <TextView
        android:id="@+id/tv_rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dimens_10dp"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/black"
        android:textSize="17dp" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/dimens_30dp"
        android:layout_toRightOf="@id/tv_rank"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/black"
        android:textSize="17dp" />

    <Button
        android:id="@+id/btn_invitefrnd"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimens_40dp"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/dimens_10dp"
        android:background="@drawable/invite_button_bg"
        android:text="Invite"
        android:textAllCaps="false" />
</RelativeLayout>